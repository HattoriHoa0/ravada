<!DOCTYPE html>
<html ng-app="ravada.app">
%= include 'bootstrap/header'
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top" role="document">
    <div id="wrapper">
        %= include 'bootstrap/navigation'
        <div id="page-wrapper"
             ng-controller="admin_groups"
             ng-init="init('<%= $type %>', '<%= $name %>', '<%= $group_id %>')"
            >
            <div class="page-header">
              <div class="card" id="admin-content">
                <div class="card-header">
                    <h2 class="display-5"><%=l 'Group' %> <%= $group_name %></h2>
%                  if ($type eq 'ldap') {
LDAP

                    <%=l 'object class:' %> <b><%= join(" - ",sort @$object_class) %></b>
                    <br/>
                    <%=l 'dn:' %> <b><%= $group->dn %></b>
% }
                </div>
              </div>
            </div>
            <div class="card-body" ng-cloak="1">

            <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" href="#members" role="tab" data-toggle="tab" aria-controls="members" aria-selected="true"><%=l 'Members' %></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#upload" role="tab" data-toggle="tab" aria-controls="upload"><%=l 'Upload' %></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#grants" role="tab" data-toggle="tab" aria-controls="grants"><%=l 'Grants' %></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="#remove" role="tab" data-toggle="tab" aria-controls="grants"><%=l 'Remove' %></a>
            </li>

            </ul>

            <div class="tab-content" id="myTabContent"
                    ng-show="<%= $_user->can_manage_groups %> && !removed">

                <div class="tab-pane fade show active" id="members" role="tabpanel" aria-labelledby="members-tab">
                members
                </div>
            </div>
            </div>
        </div>
    </div>
%= include $footer
%= include 'bootstrap/scripts'
%= include 'bootstrap/messages'
</body>
</html>
